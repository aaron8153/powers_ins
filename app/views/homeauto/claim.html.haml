.companies
	%h1
		Report Claim
	.resto
		%h3
			Restoration Companies -	
		%a.catco{:href => "http://www.catcoinc.com/"}
		%a.justclean{:href => "http://www.justcleanrestoration.com/"}
		%a.woodard{:href => "http://www.woodardcleaning.com/"}
	- @companies.each do |company|
		.company-box
			.company-bg
				.company-logo
					= image_tag company.logo.url(:medium)
				.company-right
					.company-name
						= company.name
					.company-info
						.company-billing.homeauto
							.phone-one
								= company.homeauto_billing_number_one
							.phone-two
								= company.homeauto_billing_number_two
						.company-claim.homeauto
							.phone-one
								= company.homeauto_claim_number_one
							.phone-two
								= company.homeauto_claim_number_two
