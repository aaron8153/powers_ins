= form_for @about_heading do |f|
  -if @about_heading.errors.any?
    #error_explanation
      %h2= "#{pluralize(@about_heading.errors.count, "error")} prohibited this about_heading from being saved:"
      %ul
        - @about_heading.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :heading
    = f.text_field :heading
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :page
    = f.text_field :page
  .actions
    = f.submit 'Save'
