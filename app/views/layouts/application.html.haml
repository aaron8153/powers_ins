!!!
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml", "xmlns:fb" => "http://www.facebook.com/2008/fbml", "xmlns:og" => "http://ogp.me/ns#"}
	%head
		%link{:rel => "shortcut icon", :href => "/favicon.ico", :type => "image/x-icon"}
		%title!= "POWERS&reg; Insurance and Benefits#{@subtitle}"
		%meta{ :charset => 'UTF-8'}
		%meta{ :name => "keywords", :content =>"POWERS,powers,insurance,benefits,STL,Saint Louis,St. Louis,clayton,missouri,mo,business,home,auto,life,work,workers compensation,compensation,local,instant,quote,live,chat,commercial,personal,#{@keywords}"}
		%meta{ :property => "og:title", :content => "POWERS&reg; Insurance and Benefits"}
		%meta{ :property => "og:type", :content => "company"}
		%meta{ :property => "og:url", :content => "#{request.url}"}
		%meta{ :property => "og:image", :content => "http://powers.jbasol.com/images/logo.png"}
		%meta{ :property => "og:site_name", :content => "POWERS&amp;reg Insurance and Benefits"}
		%meta{ :property => "fb:admins", :content => "3100926"}
		= stylesheet_link_tag 'main'
		= stylesheet_link_tag 'standard'
		= javascript_include_tag 'jquery.min'
		
		%script
			var $j = jQuery.noConflict();
		= javascript_include_tag 'pngfix'
		= include_tiny_mce_if_needed
		= csrf_meta_tag
		%script{:type => "text/javascript", :src => "http://use.typekit.com/mzi2lag.js"}
		%script{:type => "text/javascript"}
			try{Typekit.load();}catch(e){}
		- if params[:controller] == "contact" && params[:action] == "index"
			%script{:type => "text/javascript", :src => "http://maps.google.com/maps/api/js?sensor=false"}
			= javascript_include_tag 'contactmap'
		= yield :local_javascript
		
		= yield :head
		= javascript_include_tag 'docready'
	- if params[:controller] == "contact" && params[:action] == "index"
		%body{:onload => "initialize();"}
			.main
				.header
					= render :partial => 'layouts/partials/header/main'
				.top-nav
					.three-button
						= render :partial => 'layouts/partials/nav/three-button'
				.middle-wrapper
					.middle
						= render :partial => 'layouts/partials/floater'
						= render :partial => 'layouts/partials/aboutbox'
						.page-content
							= yield
						= javascript_include_tag 'form-effects'
				.bottom
					.bottom-glow
						.ticker
							= render :partial => 'layouts/partials/ticker'
						.footer
							= render :partial => 'layouts/partials/footer/main'
			- if !request.post?
				= javascript_include_tag 'olark'
	- else
		%body
			.main
				.header
					= render :partial => 'layouts/partials/header/main'
				.top-nav
					.three-button
						= render :partial => 'layouts/partials/nav/three-button'
				.middle-wrapper
					.middle
						= render :partial => 'layouts/partials/floater'
						= render :partial => 'layouts/partials/aboutbox'
						.page-content
							= yield
						= javascript_include_tag 'form-effects'
				.bottom
					.bottom-glow
						.ticker
							= render :partial => 'layouts/partials/ticker'
						= javascript_include_tag 'ticker'
						.footer
							= render :partial => 'layouts/partials/footer/main'
			- if !request.post?
				= javascript_include_tag 'olark'