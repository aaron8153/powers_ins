= form_for :associate, @associate, :url => associates_path, :html => { :multipart => true } do |f|
  -if @associate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@associate.errors.count, "error")} prohibited this associate from being saved:"
      %ul
        - @associate.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :avatar
    = f.file_field :avatar
  .field
    = f.label :certifications
    = f.text_field :certifications
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :division
    = f.text_field :division
  .actions
    = f.submit 'Save'
